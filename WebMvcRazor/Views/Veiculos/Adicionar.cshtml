@model WebMvcRazor.Models.Veiculos
@using WebMvcRazor.Models
<h2>@ViewBag.Title.</h2>
<h3 class="badge bg-secondary">@ViewBag.Message</h3>

@using (Html.BeginForm("Salvar", "Veiculos", FormMethod.Post, new { id = "formVeiculoAdicionar", name = "formVeiculoAdicionar" }))
{
    @*<form action="/veiculos/salvar" method="post">*@
    <div class="row col-md-offset-3">
        @*<label for="nome" class="col-sm-2 col-form-label text-right">Marca:</label>*@
        @Html.LabelFor(Model => Model.Nome, new { @class = "col-sm-2 col-form-label text-right" })
        <div class="col-sm-4">
            @*<input type="text" class="form-control" id="nome" name="nome" />*@
            @Html.TextBoxFor(Model => Model.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Nome, "", new { @classe = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @*<label for="modelo" class="col-sm-2 col-form-label text-right">Modelo:</label>*@
        @Html.LabelFor(Model => Model.Modelo, new { @class = "col-sm-2 col-form-label text-right" })
        <div class="col-sm-4">
            @*<input type="text" class="form-control" id="modelo" name="modelo" />*@
            @Html.TextBoxFor(Model => Model.Modelo, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Modelo, "", new { @classe = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @*<label for="fabricacao" class="col-sm-2 col-form-label text-right">Ano:</label>*@
        @Html.LabelFor(Model => Model.Fabricacao, new { @class = "col-sm-2 col-form-label text-right" })
        <div class="col-sm-4">
            @*<input type="text" class="form-control" id="fabricacao" name="fabricacao" />*@
            @Html.TextBoxFor(Model => Model.Fabricacao, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Fabricacao, "", new { @classe = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @*<label for="cor" class="col-sm-2 col-form-label text-right">Cor:</label>*@
        @Html.LabelFor(Model => Model.Cor, new { @class = "col-sm-2 col-form-label text-right" })
        <div class="col-sm-4">
            @*<input type="text" class="form-control" id="cor" name="cor" />*@
            @Html.TextBoxFor(Model => Model.Cor, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Cor, "", new { @classe = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @*<label for="combustivel" class="col-sm-2 col-form-label text-right">Combustível:</label>*@
        @Html.LabelFor(Model => Model.Combustivel, new { @class = "col-sm-2 col-form-label text-right" })
        <div class="col-sm-4">
            @*<input type="text" class="form-control" id="combustivel" name="combustivel" />*@
            @*@Html.TextBoxFor(Model => Model.Combustivel, new { @class = "form-control" })*@
            @*@Html.ValidationMessageFor(Model => Model.Combustivel, "", new { @classe = "text-danger" })*@
            @Html.DropDownListFor(Model => Model.Combustivel, Combustivel.Diesel.ToSelectList(), "Selecione um tipo de combustivel", new { @class = "form-control" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        <label for="automatico" class="col-sm-2 col-form-label text-right">Automátiico:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="automatico" name="automatico" />
        </div>
    </div>
    <div class="row col-md-offset-3">
        @*<label for="valor" class="col-sm-2 col-form-label text-right">Valor:</label>*@
        @Html.LabelFor(Model => Model.Valor, new { @class = "col-sm-2 col-form-label text-right" })
        <div class="col-sm-4">
            @*<input type="text" class="form-control" id="valor" name="valor" />*@
            @Html.TextBoxFor(Model => Model.Valor, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Valor, "", new { @classe = "text-danger" })
        </div>
    </div>

    <br />
    <div class="button">
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
    @*</form>*@
}
