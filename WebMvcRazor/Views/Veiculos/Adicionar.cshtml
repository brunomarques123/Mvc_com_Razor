@model WebMvcRazor.Models.Veiculos
@using WebMvcRazor.Models
<h2>@ViewBag.Title.</h2>
<h3 class="badge bg-secondary">@ViewBag.Message</h3>

@using (Html.BeginForm("Salvar", "Veiculos", FormMethod.Post, new { id = "formVeiculoAdicionar", name = "formVeiculoAdicionar" }))
{
   
    <div class="row col-md-offset-3">       
        @Html.LabelFor(Model => Model.Nome, new { @class = "col-sm-2 col-form-label text-right" })
        <div class="col-sm-4">            
            @Html.TextBoxFor(Model => Model.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Nome, "", new { @classe = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">      
        @Html.LabelFor(Model => Model.Modelo, new { @class = "col-sm-2 col-form-label text-right" })
        <div class="col-sm-4">            
            @Html.TextBoxFor(Model => Model.Modelo, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Modelo, "", new { @classe = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">       
        @Html.LabelFor(Model => Model.Fabricacao, new { @class = "col-sm-2 col-form-label text-right" })
        <div class="col-sm-4">           
            @Html.TextBoxFor(Model => Model.Fabricacao, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Fabricacao, "", new { @classe = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">        
        @Html.LabelFor(Model => Model.Cor, new { @class = "col-sm-2 col-form-label text-right" })
        <div class="col-sm-4">          
            @Html.TextBoxFor(Model => Model.Cor, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Cor, "", new { @classe = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">      
        @Html.LabelFor(Model => Model.Combustivel, new { @class = "col-sm-2 col-form-label text-right" })
        <div class="col-sm-4">           
            @Html.DropDownListFor(Model => Model.Combustivel, Combustivel.Diesel.ToSelectList(), "Selecione um tipo de combustivel", new { @class = "form-control" })
        </div>
    </div>
    <div class="row col-md-offset-3">        
        @Html.LabelFor(Model => Model.Automatico, new { @class = "col-sm-2 col-form-label text-right" })        
        <div class="col-sm-4">
            @Html.DropDownListFor(Model => Model.Automatico, SimNao.Sim.ToSelectList(), "Câmbio Automatico ?", new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Automatico, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">       
        @Html.LabelFor(Model => Model.Valor, new { @class = "col-sm-2 col-form-label text-right" })
        <div class="col-sm-4">           
            @Html.TextBoxFor(Model => Model.Valor, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Valor, "", new { @classe = "text-danger" })
        </div>
    </div>

    <br />
    <div class="button">
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
    @*</form>*@
}
